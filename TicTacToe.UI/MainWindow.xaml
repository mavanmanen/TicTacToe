<Window x:Class="TicTacToe.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=System.Core"
        xmlns:vm="clr-namespace:TicTacToe.UI.ViewModels"
        xmlns:core="clr-namespace:TicTacToe.Core;assembly=TicTacToe.Core"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Tac-Tac-Toe" Height="auto" Width="auto" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel, IsDesignTimeCreatable=True}">
    
    <Window.Resources>
        <system:Double x:Key="CellSize">120</system:Double>
        <system:Double x:Key="FontSize">20</system:Double>
        
        <Style x:Key="CellStyle" TargetType="Button">
            <Style.Setters>
                <Setter Property="Height" Value="{StaticResource CellSize}"/>
                <Setter Property="Width" Value="{StaticResource CellSize}"/>
                <Setter Property="FontSize" Value="100"/>
                <Setter Property="Background" Value="Transparent"/>
            </Style.Setters>
            
            <Style.Triggers>
                <Trigger Property="Tag" Value="{x:Static core:Player.One}">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="Content" Value="X"/>
                </Trigger>
                
                <Trigger Property="Tag" Value="{x:Static core:Player.Two}">
                    <Setter Property="Foreground" Value="Blue"/>
                    <Setter Property="Content" Value="O"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Row="0" Grid.Column="0" ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" HorizontalContentAlignment="Right" FontSize="{StaticResource FontSize}">Current Player:</Label>
            <Label Grid.Column="1" FontSize="{StaticResource FontSize}" Content="{Binding GameState.CurrentPlayer}"/>
        </Grid>
        
        <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource CellStyle}" BorderThickness="0,1,1,1" CommandParameter="0" Command="{Binding CellClickCommand}" Tag="{Binding GameState.Board[0]}"/>
        <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource CellStyle}" BorderThickness="0,1,1,1" CommandParameter="1" Command="{Binding CellClickCommand}" Tag="{Binding GameState.Board[1]}"/>
        <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource CellStyle}" BorderThickness="0,1,0,1" CommandParameter="2" Command="{Binding CellClickCommand}" Tag="{Binding GameState.Board[2]}"/>
        
        <Button Grid.Row="2" Grid.Column="0" Style="{StaticResource CellStyle}" BorderThickness="0,0,1,1" CommandParameter="3" Command="{Binding CellClickCommand}" Tag="{Binding GameState.Board[3]}"/>
        <Button Grid.Row="2" Grid.Column="1" Style="{StaticResource CellStyle}" BorderThickness="0,0,1,1" CommandParameter="4" Command="{Binding CellClickCommand}" Tag="{Binding GameState.Board[4]}"/>
        <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource CellStyle}" BorderThickness="0,0,0,1" CommandParameter="5" Command="{Binding CellClickCommand}" Tag="{Binding GameState.Board[5]}"/>
        
        <Button Grid.Row="3" Grid.Column="0" Style="{StaticResource CellStyle}" BorderThickness="0,0,1,0" CommandParameter="6" Command="{Binding CellClickCommand}" Tag="{Binding GameState.Board[6]}"/>
        <Button Grid.Row="3" Grid.Column="1" Style="{StaticResource CellStyle}" BorderThickness="0,0,1,0" CommandParameter="7" Command="{Binding CellClickCommand}" Tag="{Binding GameState.Board[7]}"/>
        <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource CellStyle}" BorderThickness="0,0,0,0" CommandParameter="8" Command="{Binding CellClickCommand}" Tag="{Binding GameState.Board[8]}"/>
    </Grid>
</Window>
